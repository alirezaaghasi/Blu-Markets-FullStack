  border-top: 1px solid var(--border-subtle);
}

.consent-sentence {
  font-size: 16px;
  font-weight: 500;
  text-align: right;
  direction: rtl;
  padding: 16px;
  background: var(--bg-secondary);
  border-radius: 8px;
  margin-bottom: 8px;
}

.consent-translation {
  font-size: 13px;
  color: var(--text-muted);
  font-style: italic;
  margin-bottom: 16px;
}

.consent-input {
  width: 100%;
